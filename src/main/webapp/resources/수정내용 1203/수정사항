
수정사항

src - main - java
    - member - controller       // 마이페이지 화면으로 이동 추가
    - order                     // 주문조회 화면으로 이동 추가
    - questions, reviews
    - util - paging


src - resources - mappers
    - questionMapper, reviewMapper 추가


src - main ... views
    - common - header           // 55, 56줄 수정
    - member - my_page.jsp
    - order - order_lookup.jsp
    - question, review



아래 sql로 db에 데이터 추가후 리뷰, 문의 확인가능

desc review;
select * from review;
delete from review;

DELIMITER $$
DROP PROCEDURE IF EXISTS loopInsert$$

CREATE PROCEDURE loopInsert()
BEGIN
DECLARE i INT DEFAULT 1;
WHILE i <= 234 DO
INSERT INTO review(id, member_id, product_id, content, create_date, grade, isExist)
VALUES(i, 1+FLOOR(RAND()*10), 1+FLOOR(RAND()*10), concat('내용',i), now(), 1+FLOOR(RAND()*5), 1);
SET i = i + 1;
END WHILE;
END$$
DELIMITER $$

CALL loopInsert();


desc question;
select * from question;
delete from question;

DELIMITER $$
DROP PROCEDURE IF EXISTS asd$$

CREATE PROCEDURE asd()
BEGIN
DECLARE i INT DEFAULT 1;
WHILE i <= 234 DO
INSERT INTO question(id, member_id, product_id, title, content, create_date, isLock, isReplyExist, category)
VALUES(i, 1+FLOOR(RAND()*10), 1+FLOOR(RAND()*10), concat('제목',i), concat('내용',i), now(), FLOOR(RAND()*2), 1, 1+FLOOR(RAND()*4));
SET i = i + 1;
END WHILE;
END$$
DELIMITER $$

CALL asd();


